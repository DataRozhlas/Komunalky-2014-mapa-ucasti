.infoBar
  position absolute
  top 0px
  right 0px
  width 330px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding-left 15px
  padding-right 15px

  h2
    color ColorHeading
    overflow hidden
    width 100%
    white-space nowrap
    text-overflow ellipsis
    margin 15px 0px 5px 0px
  .clickInvite
    margin 9px 0px 0px 0px
    color lighten(black, 40%)
    font-style italic
  h3
    margin 15px 0px 10px 0px
    &.genderH
      margin-top 33px
    // &.titulyH
    //   margin-top 45px
  .stats
    float left
    margin-top 40px
    margin-left -15px
    padding-bottom 20px
    width (@width - 1px)
    > div
      float left
      text-align center
      width 30%
      margin-bottom -5px
      height 45px
      &:nth-child(2)
        border-left 1px solid #b
        border-right 1px solid #b
      &:last-child
        width 40%
      h4
        margin 0px
        margin-bottom 10px
        margin-top -5px
        font-weight normal
        color #3
      span.value
        float left
        display block
        width 100%
        margin-top 3px
        font-size 1.8em

  &.noData
    h3
    .titulLegend .text
    .stats h4
    .stats .value
    .ageHistogram .field .legend
    .gender .center-text
      color #b
    .gender
    .tituly
    .titulLegend .legendBg
    .ageHistogram .field
      background #ddd
      border-color #ddd
    .gender .center
      triangle 12px, 7px, 'top', #ddd

